main
    padding-top rem(100px)

.row
    center(rem(1030px))
    
.flex-grid
    padding-top rem(35px)
    display flex
    flex-flow row wrap

.title-category
    center(rem(1000px))
    font-size rem(40px)
    margin-top 0
    text-transform uppercase
    padding 0 rem(15px)

.box-item
    background-color (rgba(39, 186, 164, 0.2))
    flex 1 0 300px
    margin 0 rem(15px) rem(50px)
    display inline-block
    border 1px solid #eee
    border-radius 5px
    min-height rem(285px)
    transition all .3s
    position relative
    cursor: pointer

    &:hover
        box-shadow 1px 2px 10px #eee
    a
        text-decoration none
        &:hover
            .box-item
                box-shadow 10px 10px 10px #eee
    .box-body
        padding rem(25px)
        time
            font-size rem(14px)
            color #b2bac2
        h2
            margin rem(5px) 0 rem(15px)
            font-size rem(20px)
            mainFont(800)
            color main
            span
                color 
        p
            margin 0 0 rem(20px)
            color #576366
            font-size rem(14px)
            line-height rem(22px)
        .tags a
            color lightGray
            padding rem(5px) rem(10px)
            border-radius 1px
            display inline-block
            margin 0 0 rem(5px)
            z-index 50
            font-size rem(12px)

.ribbon
    display none
